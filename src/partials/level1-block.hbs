<!-- LEVEL 1 MODULE ROW // -->
<tr>
	<td align="center" valign="top" class="level1">
		<!-- CENTERING TABLE // -->
		<!--
			The centering table keeps the content
			tables centered in the emailBody table,
			in case its width is set to 100%.
		-->
		<table border="0" cellpadding="0" cellspacing="0" width="100%">
			<tr>
				<td align="center" valign="top">
					<!-- FLEXIBLE CONTAINER // -->
					<!--
						The flexible container has a set width
						that gets overridden by the media query.
						Most content tables within can then be
						given 100% widths.
					-->
					<table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
						<tr>
							<td align="center" valign="top">
								<img src="{{ assets }}/img/{{ data.photo }}" width="600" style="max-width:600px;" class="flexibleImage">
							</td>
						</tr>
					</table>
					<!-- // FLEXIBLE CONTAINER -->
				</td>
			</tr>
			<tr>
				<td align="center" valign="top">
					<table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
						<tr>
							<td align="center" valign="top" width="600" class="flexibleContainerCell">
								<table border="0" cellpadding="0" cellspacing="0" width="100%">
									<tr>
										<td valign="top" class="textContent">
											<a href="#">
												<h3>{{{ data.title }}}</h3>
												<p>{{{ data.desc }}}</p>
											</a>
										</td>
									</tr>
								</table>
							</td>
						</tr>
						<tr>
							<td align="left" valign="top" width="600" class="flexibleContainerCell">
								<table border="0" cellpadding="0" cellspacing="0" class="emailButton {{ button.class }}">
									<tr>
										<td align="left" valign="middle" class="buttonContent">
											<a href="#" target="_blank">{{{ button.label }}}</a>
										</td>
									</tr>
								</table>
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
		<!-- // CENTERING TABLE -->
	</td>
</tr>
<!-- // LEVEL 1 MODULE ROW -->